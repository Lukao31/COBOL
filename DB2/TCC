CREATE TABLE CLIENTES (
    CPF CHAR(11)          NOT NULL,
    NOME CHAR(100)        NOT NULL,
    EMAIL CHAR(255)       NOT NULL,
    DATA_NASCIMENTO DATE,
    DATA_CADASTRO DATE    NOT NULL,
    NOME_USUARIO CHAR(20) NOT NULL,
    SENHA CHAR(20)        NOT NULL
);

-- Criação do índice UNIQUE para a chave primária (CPF)
CREATE UNIQUE INDEX IX_CLIENTES_CPF
ON CLIENTES (CPF);

-- Criação da PRIMARY KEY (referencia o índice criado)
ALTER TABLE CLIENTES
ADD CONSTRAINT PK_CLIENTES PRIMARY KEY (CPF);

-- Criação do índice UNIQUE para o campo EMAIL
CREATE UNIQUE INDEX IX_CLIENTES_EMAIL
ON CLIENTES (EMAIL);