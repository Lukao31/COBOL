-- DROP TABLE TBPRODUTO;
-- COMMIT;
   CREATE TABLE TBPRODUTO
   (
    CODPROD CHAR(4) NOT NULL
    ,DESCPROD VARCHAR(20) NOT NULL
    ,UNIDPROD CHAR(5)
    ,LOCALPROD CHAR(5)
    ,QTDEST DECIMAL(5,0)
    ,QTDMAX DECIMAL(5,0)
    ,QTDMIN DECIMAL(5,0)
    ,PRECOCOMPRA DECIMAL(8,2) CHECK(PRECOCOMPRA >= 0)
    ,PRECOVENDA DECIMAL(8,2) CHECK(PRECOVENDA >= 0)
    ,PERCOMIS DECIMAL(4,2) CHECK(PERCOMIS >= 0)
    , CONSTRAINT MAX CHECK (QTDMAX > QTDMIN)
    , CONSTRAINT MIN CHECK (QTDMIN < QTDMAX)
   );
   CREATE UNIQUE INDEX IDXTBPRODUTO
   ON TBPRODUTO(CODPROD);
   ALTER TABLE TBPRODUTO
   ADD PRIMARY KEY(CODPROD);
